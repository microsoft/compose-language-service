{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "lib": [
            "es2022",
        ],
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "inlineSources": false,
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "stripInternal": true,
    },
    "exclude": [
        "src/test/clientExtension",
        "lib",
        "bin"
    ],
}
