{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build+Watch",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build:esm",
                "--",
                "--watch",
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "isBackground": true,
            "presentation": {
                "revealProblems": "onProblem"
            },
            "problemMatcher": "$tsc-watch",
        },
        {
            "type": "typescript",
            "tsconfig": "src/test/clientExtension/tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "presentation": {
                "reveal": "never"
            },
            "isBackground": true,
            "label": "tsc-watch: client extension"
        }
    ]
}
