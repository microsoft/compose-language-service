{
    "name": "@microsoft/compose-language-service",
    "author": "Microsoft Corporation",
    "version": "0.4.0",
    "publisher": "ms-azuretools",
    "description": "Language service for Docker Compose documents",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/microsoft/compose-language-service"
    },
    "bugs": {
        "url": "https://github.com/microsoft/compose-language-service/issues"
    },
    "homepage": "https://github.com/microsoft/compose-language-service/blob/main/README.md",
    "keywords": [
        "vscode",
        "docker"
    ],
    "module": "dist/esm/server.js",
    "main": "dist/cjs/server.js",
    "types": "dist/esm/server.d.ts",
    "bin": {
        "docker-compose-langserver": "./bin/docker-compose-langserver"
    },
    "scripts": {
        "build": "npm run build:esm && npm run build:cjs",
        "build:esm": "tsc",
        "build:cjs": "tsc --outDir dist/cjs --module nodenext --moduleResolution nodenext --declaration false",
        "lint": "eslint --max-warnings 0",
        "package": "npm pack",
        "test": "mocha"
    },
    "engines": {
        "node": ">=22"
    },
    "devDependencies": {
        "@microsoft/vscode-azext-eng": "1.0.0-alpha.8",
        "@types/node": "22.x"
    },
    "dependencies": {
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.12",
        "yaml": "^2.8.2"
    },
    "mocha": {
        "node-option": [
            "import=tsx"
        ],
        "spec": [
            "src/test/**/*.test.ts"
        ]
    }
}
